{
  "name": "innosthan-platform",
  "version": "1.0.0",
  "description": "Innosthan - Entrepreneurship Learning & Incubation Hub",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm run dev",
    "server": "cd server && npm run dev",
    "build": "cd server && npm install && npm run build && cd ../client && npm install && npm run build",
    "start": "cd server && npm run start",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "keywords": ["entrepreneurship", "incubation", "learning", "AI", "education"],
  "author": "Innosthan Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
